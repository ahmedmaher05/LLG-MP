{
    "name": "llg-mp",
    "description": "language learning gamification media player",
    "author": "Ahmed Maher",
    "version": "0.1.4",
    "main": "app.js",
    "dependencies": {
        "electron-dl": "^1.14.0",
        "electron-google-analytics": "^0.1.0",
        "electron-log": "^3.0.5",
        "electron-updater": "^4.0.6",
        "google-translate-api": "^2.3.0",
        "google-translate-api-browser": "^1.1.71",
        "gtts": "^0.2.1",
        "install": "^0.12.2",
        "jquery": "3.3.1",
        "languagedetect": "^2.0.0",
        "nedb": "^1.8.0",
        "node-gtts": "^2.0.2",
        "node-localstorage": "^1.3.1",
        "npm": "^6.9.0",
        "opensubtitles-api": "^5.0.1",
        "sweetalert": "^2.1.2",
        "sweetalert2": "^8.10.2",
        "universal-analytics": "^0.4.20",
        "wcjs-player": "^6.0.0",
        "wcjs-prebuilt": "3.0.0",
        "xmlhttprequest": "^1.8.0"
    },
    "env": "development",
    "devDependencies": {
        "electron": "1.4.3",
        "electron-builder": "^20.39.0",
        "eslint": "^7.11.0",
        "eslint-config-prettier": "^6.13.0",
        "eslint-config-standard": "^14.1.1",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-prettier": "^3.1.4",
        "eslint-plugin-promise": "^4.2.1",
        "eslint-plugin-standard": "^4.0.1",
        "nodemon": "^2.0.4",
        "prettier": "^2.1.2"
    },
    "scripts": {
        "postinstall": "npx patch-package",
        "pack": "electron-builder --dir",
        "dist": "electron-builder",
        "dev": "nodemon --watch . --exec \"./node_modules/electron/dist/electron.exe . --debug\" --ext html,js,json,css"
    },
    "linux": {
        "target": [
            "AppImage",
            "deb"
        ]
    },
    "win": {
        "target": "NSIS",
        "icon": "build/icon.ico",
        "publish": [
            "github"
        ]
    },
    "build": {
        "appId": "com.electron.llg-mp",
        "mac": {
            "category": "your.app.category.type"
        }
    }
}
